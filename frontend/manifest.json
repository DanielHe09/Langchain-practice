{
  "manifest_version": 3,
  "name": "LangChain Chatbot",
  "version": "1.0.0",
  "description": "Chatbot extension that connects to your LangChain backend",
  "action": {
    "default_popup": "popup.html",
    "default_title": "LangChain Chatbot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
